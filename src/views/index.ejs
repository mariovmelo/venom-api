<!DOCTYPE html>
<html>
<head>
    <title>Venom Session Manager</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1>Venom Session Manager</h1>
        
        <form action="/create-session" method="POST" class="mb-4">
            <div class="input-group">
                <input type="text" name="sessionName" class="form-control" placeholder="Session Name" required>
                <button type="submit" class="btn btn-primary">Create Session</button>
            </div>
        </form>

        <h2>Active Sessions</h2>
        <% if (sessions.length === 0) { %>
            <p>No active sessions</p>
        <% } else { %>
            <ul class="list-group">
                <% sessions.forEach(function(session) { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <%= session.id %> - <%= session.name %>
                        <form action="/remove-session/<%= session.id %>" method="POST">
                            <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                        </form>
                    </li>
                <% }); %>
            </ul>
        <% } %>
    </div>
</body>
</html>